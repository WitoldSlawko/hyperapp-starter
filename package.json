{
  "name": "hyperapp-starter",
  "version": "0.0.0",
  "private": true,
  "description": "Minimal Hyperapp, Typescript and Parcel starter.",
  "author": "Jose Quintana <git.io/joseluisq>",
  "license": "MIT",
  "main": "public/index.html",
  "scripts": {
    "clean": "rm -rf dist .cache",
    "prestart": "yarn clean",
    "start": "parcel",
    "prebuild": "yarn clean",
    "build": "env NODE_ENV=production parcel build --no-source-maps --experimental-scope-hoisting --detailed-report --public-url ./",
    "lint": "tslint --format stylish --project tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "hyperapp": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/node": "^10.5.1",
    "autoprefixer": "^8.6.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.3.0",
    "node-sass": "^4.9.1",
    "parcel-bundler": "^1.9.4",
    "parcel-plugin-typescript": "^1.0.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-standard-plus": "^1.2.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**.spec.+(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
